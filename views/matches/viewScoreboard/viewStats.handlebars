<main class="main1">


   <ul class="main-nav">
   
    <li><a class="fields">{{team1Name}}</a></li>
    <li>  <div style=" width:auto"   class="count" id="team1_goals">{{team1Goals}}</div></li>
        
      <li><div style=" width:auto"   class="count" id="team2_goals">{{team2Goals}}</div></li>
       <li><a class="fields">{{team2Name}}</a></li>
  
  </ul>

  <ul class="main-nav">
    <li><a href="/matches/{{id}}/players">Players</a></li>
    <li><a href="/matches/{{id}}/stats">Stats</a></li>
    <li><a href="/matches/{{id}}/commentary">Commentary</a></li>
    <li><a href="/matches/{{id}}/highlights">Highlights</a></li>
  </ul>

  {{#if creator}}
  <a style="color: rgb(246, 249, 247); background-color: rgba(12, 12, 12, 0);" href="/matches/{{id}}/editStats">Edit</a>
  {{/if}}

  <table class="table1">
    <tr>

      <th id="team1_name">{{team1Name}} </th>
      <th>Fields</th>
      <th id="team2_name">{{team2Name}}</th>
    </tr>
    
    <tr>
      <td id="view_team1_goals">{{team1stats.goals}}</td>
      <td>Goals</td>
      <td id="view_team2_goals">{{team2stats.goals}}</td>
    </tr>
    <tr>

      <td id="view_team1_shots">{{team1stats.shots}}</td>
      <td>Shots</td>
      <td id="view_team2_shots">{{team2stats.shots}}</td>
    </tr>
    <tr>

      <td id="view_team1_shotsontarget">{{team1stats.shotsontarget}}</td>
      <td>Shots on target</td>
      <td id="view_team2_shotsontarget">{{team2stats.shotsontarget}}</td>
    </tr>
    <tr>

      <td id="view_team1_fouls">{{team1stats.fouls}}</td>
      <td>Fouls</td>
      <td id="view_team2_fouls">{{team2stats.fouls}}</td>
    </tr>
    <tr>

      <td id="view_team1_passes">{{team1stats.passes}}</td>
      <td>Passes</td>
      <td id="view_team2_passes">{{team2stats.passes}}</td>
    </tr>
    <tr>

      <td id="view_team1_yellow">{{team1stats.yellowcards}}</td>
      <td>Yellow cards</td>
      <td id="view_team2_yellow">{{team2stats.yellowcards}}</td>
    </tr>
    <tr>

      <td id="view_team1_red">{{team1stats.redcards}}</td>
      <td>Red cards</td>
      <td id="view_team2_red">{{team2stats.redcards}}</td>
    </tr>
    <tr>

      <td id="view_team1_offsides">{{team1stats.offsides}}</td>
      <td>Off sides</td>
      <td id="view_team2_offsides">{{team2stats.offsides}}</td>
    </tr>
    <tr>

      <td id="view_team1_corners">{{team1stats.corners}}</td>
      <td>Corners</td>
      <td id="view_team2_corners">{{team2stats.corners}}</td>
    </tr>

  </table>

</main>